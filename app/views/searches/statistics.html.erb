<!-- statistics.html.erb -->
<div class="container mt-4">
  <h1>Search Trends</h1>

  <% if @top_searches.present? %>
    <ul>
      <% @top_searches.each do |query, count| %>
        <li><strong><%= query %>:</strong> <%= count %> times</li>
      <% end %>
    </ul>
  <% else %>
    <p>No search trends available.</p>
  <% end %>
</div>
